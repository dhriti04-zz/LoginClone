<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Login Activity theme. -->
    <style name="LoginActivityTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Login Activity EditText theme. -->
    <style name="LoginActivityEditTextTheme" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:backgroundTint">@color/colorTextHint</item>
    </style>

    <!-- btnChangeLangauge theme. -->
    <style name="TextButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:backgroundTint">@color/colorTextHint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
